class Solution {
  public:
    Node* rotate(Node* head, int k) {
         Node *pre=NULL;
        Node *temp=head; 
        int c=0;
        while(temp){
            pre=temp;
            temp=temp->next;
            c++;
        }
        pre->next=head;
        k=k%c;
        temp=head;
        while(k--){
            pre=temp;
            temp=temp->next;
        }
        pre->next=NULL;
        return temp;
        
    }
};


//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    cin.ignore();

    while (t--) {
        vector<int> arr;
        string input;
        getline(cin, input);
        stringstream ss(input);
        int number;

        // Read numbers from the input line
        while (ss >> number) {
            arr.push_back(number);
        }

        Node* head = nullptr;

        // Check if the array is empty
        if (!arr.empty()) {
            head = new Node(arr[0]);
            Node* tail = head;
            for (size_t i = 1; i < arr.size(); ++i) {
                tail->next = new Node(arr[i]);
                tail = tail->next;
            }
        }
        int k;
        cin >> k;
        cin.ignore();

        Solution ob;
        head = ob.rotate(head, k);
        printList(head);
        cout << "~\n";
    }
    return 1;
}

